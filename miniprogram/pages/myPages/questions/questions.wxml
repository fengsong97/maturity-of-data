          <swiper  style="height: 90%;" 
                  indicator-dots="{{indicatorDots}}"
                  autoplay="{{autoplay}}" 
                  interval="{{interval}}" 
                  duration="{{duration}}" 
                  current="{{currentIndex}}" 
                  bindchange="swiperChange">
            <block wx:for="{{lists}}" wx:key="*this" wx:for-item="list">
              
               <swiper-item>
                <scroll-view scroll-y="true" style="height: 100%">
                 
                          <view class="swiper-item ">   
                           <view style="box-sizing:border-box;padding:0 80rpx;">
                            <view style="text-align:center;"> 
                              <text>{{shitiTitle}}-第{{currentIndex+1}}题</text> 
                            </view> 
                           
                            <text>{{list.title}}</text>
                          </view>


                            <view class="page-section page-section-gap">
                              <view class="page-section-title"></view>
                              <radio-group class="group" id="{{currentIndex}}" bindchange="radioChange">
                                <block wx:for="{{list.answersList}}" wx:key="*this" wx:for-item="answer">
                                    <view style="margin:30rpx 0;" >
                                      <radio id="{{list.id}}{{answer.id}}" value="{{currentIndex}}_{{list.id}}_{{list.title}}_{{answer.id}}_{{answer.testSelect}}" ></radio>
                                      <label class="label-2-text" for="{{list.id}}{{answer.id}}"><text>{{answer.testSelect}}: {{answer.testInput}}</text></label>
                                    </view>
                                 </block>
                        <!--          <view style="margin:30rpx 0;">
                                  <radio id="b{{list}}" value="1" ></radio>
                                  <label class="label-2-text" for="b{{list}}"><text>B: bbbbb</text></label>
                                </view> -->
                              </radio-group>
                            </view>
                        </view>
                
                  </scroll-view>
               </swiper-item>

            </block>

           </swiper>
