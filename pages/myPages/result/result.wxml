<!--index.wxml-->
<view  >
      <view class="section">
      <picker bindchange="bindPickerChange" value="{{ShiTiArray[ShiTiIndex].dictLabel}}" range="{{ShiTiArray}}"  range-key="{{'dictLabel'}}">
        <view class="picker">
          <view>点击切换试题:  </view>
          <view style="text-align: center;">{{ShiTiArray[ShiTiIndex].dictLabel}}</view>
        </view>
      </picker>
</view>
	<view class="page" >
        <view style="text-align: center;"wx:if="{{resultsList.length == 0&&resultsTreeList.length==0}}">无评估记录</view>

        <view class="weui-panel" wx:if="{{shiTiId=='003'}}">
          <block wx:for="{{resultsList}}" wx:key="" wx:for-index="idx" wx:for-item="result" wx:if="{{idx <= 2}}">
            <!-- <view class="weui-panel__hd">只显示最近三次答题</view> -->
            <view class="weui-panel__bd"  style="border-top: 1px dashed #aaa;" bindtap="getResultDetail" data-result="{{result}}">
                <view class="weui-media-box weui-media-box_text" style="padding-bottom: 0px" >
                    <view class="weui-media-box__title weui-media-box__title_in-text" style="margin-bottom: 0px">评估时间: {{result.createDate}}</view>
                    <view class="weui-media-box__desc">{{result.testSelectRemarks}}</view>
                    <view class="weui-media-box__info" style="margin-top: 0px" >
                        <!-- <view class="weui-media-box__info__meta"  >提交时间: {{result.createDate}}</view> -->
                    </view>
                </view>
            </view>
            </block>
        </view>



        <view class="weui-panel" wx:if="{{shiTiId!='003'}}">
          <block wx:for="{{resultsTreeList}}" wx:key="" wx:for-index="index" wx:for-item="result" >
            <!-- <view class="weui-panel__hd">只显示最近三次答题</view> -->
            <view class="weui-panel__bd"  style="border-top: 1px dashed #aaa;" data-result="{{result}}">
                <view class="weui-media-box weui-media-box_text" style="padding-bottom: 0px" >
                    <view class="weui-media-box__title weui-media-box__title_in-text" style="margin-bottom: 0px">
                        当次得分:{{result.companyAvg}}
                        <view style="float: right;" data-index="{{index}}" bindtap="showDetail">查看详情</view>
                        <view wx:if="{{result.show}}">
                        <block wx:for="{{result.resultsTreeDetailList}}" wx:for-item="one">
                            <view style="text-align: center;color: #1aad19;">{{one.key}}: {{one.value}}</view>
                        </block>
                        </view>
                    </view>
                    <view class="weui-media-box__desc">{{result.testSelectRemarks}}</view>
                    <view class="weui-media-box__info" style="margin-top: 0px" >
                        <view class="weui-media-box__info__meta"  >评估时间: {{result.createDate}}</view>
                    </view>
                </view>
            </view>
            </block>

        </view>


    </view>
    <view wx:if="{{shiTiId=='003'}}" style="height: {{windowHeight/2}}px;width: {{windowWidth}}px">
      <ec-canvas id="mychartRadar" canvas-id="canvasMychartRadar" ec="{{ ec }}"></ec-canvas>
    </view>



</view>
